<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.hjq.shape.view.ShapeEditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:shape_radius="5dp"
            app:shape_solidColor="@color/white"
            app:shape_shadowSize="10dp"
            app:shape_shadowColor="@color/shadowColor"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:gravity="center_vertical"
            android:hint="用户名"
            android:textSize="16dp"
            android:imeOptions="actionDone"
            android:drawableStart="@drawable/ic_login_username"
            android:drawablePadding="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="15dp"/>

        <com.hjq.shape.view.ShapeEditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:shape_radius="5dp"
            app:shape_solidColor="@color/white"
            app:shape_shadowSize="10dp"
            app:shape_shadowColor="@color/shadowColor"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:gravity="center_vertical"
            android:hint="手机号"
            android:textSize="16dp"
            android:inputType="number"
            android:maxLength="11"
            android:imeOptions="actionDone"
            android:drawableStart="@drawable/ic_login_username"
            android:drawablePadding="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"/>

        <com.hjq.shape.layout.ShapeLinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:shape_radius="5dp"
            app:shape_solidColor="@color/white"
            app:shape_shadowSize="10dp"
            app:shape_shadowColor="@color/shadowColor"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/et_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:hint="密码"
                android:drawableStart="@drawable/ic_login_password"
                android:drawablePadding="10dp"
                android:background="@null"
                android:inputType="textPassword"
                android:textSize="16dp"
                android:imeOptions="actionDone" />


        </com.hjq.shape.layout.ShapeLinearLayout>


        <com.hjq.shape.layout.ShapeLinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:shape_radius="5dp"
            app:shape_solidColor="@color/white"
            app:shape_shadowSize="10dp"
            app:shape_shadowColor="@color/shadowColor"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/et_password_confirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:hint="确认密码"
                android:drawableStart="@drawable/ic_login_password"
                android:drawablePadding="10dp"
                android:background="@null"
                android:inputType="textPassword"
                android:textSize="16dp"
                android:imeOptions="actionDone" />


        </com.hjq.shape.layout.ShapeLinearLayout>

        <com.hjq.shape.view.ShapeButton
            android:id="@+id/bt_ok"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="注册"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="30dp"
            app:shape_type="rectangle"
            app:shape_radius="6dp"
            app:shape_solidGradientEndColor="@color/app_color2"
            app:shape_solidGradientStartColor="@color/app_color"
            app:shape_solidPressedColor="@color/button_pressed" />

    </LinearLayout>


</LinearLayout>