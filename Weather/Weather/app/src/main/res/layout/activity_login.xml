<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp">

        <View
            android:layout_width="62dp"
            android:layout_height="8dp"
            android:background="@drawable/bg_gradient_line"
            android:layout_alignParentBottom="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录"
            android:textSize="30dp" />

    </RelativeLayout>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_app_logo"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="26dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="24dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"/>

    <com.hjq.shape.view.ShapeEditText
        android:id="@+id/et_username"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:shape_radius="5dp"
        app:shape_solidColor="@color/white"
        app:shape_shadowSize="10dp"
        app:shape_shadowColor="@color/shadowColor"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:gravity="center_vertical"
        android:hint="请输入您的账号"
        android:drawableStart="@drawable/ic_login_username"
        android:drawablePadding="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="45dp"/>

    <com.hjq.shape.layout.ShapeLinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:shape_radius="5dp"
        app:shape_solidColor="@color/white"
        app:shape_shadowSize="10dp"
        app:shape_shadowColor="@color/shadowColor"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/et_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:hint="请输入您的密码"
            android:drawableStart="@drawable/ic_login_password"
            android:drawablePadding="10dp"
            android:background="@null"
            android:inputType="textPassword"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/iv_psd_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_login_psd_hide"/>

    </com.hjq.shape.layout.ShapeLinearLayout>

    <TextView
        android:id="@+id/tv_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="马上注册"
        android:layout_gravity="end"
        android:layout_margin="16dp"
        android:textSize="18dp"
        android:textColor="@color/app_color2"/>

    <com.hjq.shape.view.ShapeButton
        android:id="@+id/bt_ok"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="登录"
        android:textColor="@android:color/white"
        android:textSize="18dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="30dp"
        app:shape_type="rectangle"
        app:shape_radius="6dp"
        app:shape_solidGradientEndColor="@color/app_color2"
        app:shape_solidGradientStartColor="@color/app_color"
        app:shape_solidPressedColor="@color/button_pressed" />


</LinearLayout>