<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddEventDataActivity"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/ll_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.hjq.shape.layout.ShapeRelativeLayout
            android:id="@+id/rl_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:shape_shadowSize="10dp"
            app:shape_shadowColor="#20000000"
            app:shape_solidColor="@color/white"
            app:shape_radius="6dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingStart="25dp"
            android:paddingEnd="25dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="日程类型"
                android:textColor="#333333"
                android:textSize="16dp"
                android:drawablePadding="10dp"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="其它日程"
                android:textColor="#666666"
                android:textSize="16dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:drawableEnd="@drawable/ic_down_arrow"
                android:drawablePadding="10dp" />

        </com.hjq.shape.layout.ShapeRelativeLayout>

        <com.hjq.shape.layout.ShapeLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:shape_shadowSize="10dp"
            app:shape_shadowColor="#20000000"
            app:shape_solidColor="@color/white"
            app:shape_radius="6dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="内容"
                android:textColor="#333333"
                android:textSize="16dp" />

            <com.hjq.shape.view.ShapeEditText
                android:id="@+id/et_content"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:shape_strokeSize="1dp"
                app:shape_strokeColor="#666666"
                app:shape_radius="6dp"
                android:gravity="top"
                android:padding="6dp"/>

        </com.hjq.shape.layout.ShapeLinearLayout>

        <com.hjq.shape.layout.ShapeRelativeLayout
            android:id="@+id/rl_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:shape_shadowSize="10dp"
            app:shape_shadowColor="#20000000"
            app:shape_solidColor="@color/white"
            app:shape_radius="6dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingStart="25dp"
            android:paddingEnd="25dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="时间"
                android:textColor="#333333"
                android:textSize="16dp"
                android:drawablePadding="10dp"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="#666666"
                android:textSize="16dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:drawableEnd="@drawable/ic_arrow_right_gary"
                android:drawablePadding="10dp" />

        </com.hjq.shape.layout.ShapeRelativeLayout>


    </LinearLayout>


    <com.hjq.shape.view.ShapeButton
        android:id="@+id/bt_save"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="保存"
        android:textColor="@android:color/white"
        android:textSize="18dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="30dp"
        app:shape_type="rectangle"
        app:shape_radius="6dp"
        app:shape_solidGradientEndColor="@color/app_color2"
        app:shape_solidGradientStartColor="@color/app_color"
        app:shape_solidPressedColor="@color/button_pressed" />



</LinearLayout>